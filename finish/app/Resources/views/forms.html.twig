{% block form_row %}
{% spaceless %}
    <div class="control-group{{ errors|length > 0 ? ' has-error' : '' }}">
        {{ form_label(form) }}

        <div class="controls">
            {{ form_widget(form) }}
            {{ form_errors(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
{% spaceless %}
{% if errors|length > 0 %}
<span class="help-inline">
    {% for error in errors %}
        {{
            error.messagePluralization is null
                ? error.messageTemplate|trans(error.messageParameters, 'validators')
                : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
        }}
    {% endfor %}
</span>
{% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block form_label %}
{% spaceless %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' control-label')|trim}) %}
    <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}</label>
{% endspaceless %}
{% endblock form_label %}

{% block repeated_row %}
{% spaceless %}
    <div class="control-group{{ form.first.vars.errors|length > 0 ? ' has-error' : '' }}">
        {{ form_row(form.first, {'label': firstLabel|default}) }}
        {{ form_row(form.second, {'label': secondLabel|default}) }}
    </div>
{% endspaceless %}
{% endblock repeated_row %}
